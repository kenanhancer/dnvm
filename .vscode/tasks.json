{
    "version": "0.1.0",
    "isShellCommand": true,
    "showOutput": "silent",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "build",
            "args": [
                "dotnet build ${workspaceRoot}/src/native/native.proj"
            ],
            "isBuildCommand": true
        }
    ],
    "osx": {
        "command": "bash",
        "args": [
            "-c"
        ],
        "tasks": [
            {
                "taskName": "publish",
                "args": [
                    "./build.sh"
                ]
            }
        ]
    },
    "windows": {
        "command": "cmd",
        "args": [
            "/C"
        ]
    }
}